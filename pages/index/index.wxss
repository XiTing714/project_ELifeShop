page {
  background-color: #f5f5f5
}

.statusbar {
  width: 100vw;
  background-color: white;
  position: relative
}

.search_container {
  width: 100vw;
  position: relative;
  display: flex;
  align-items: center;
  background-color: white
}

.search_title {
  position: absolute;
  left: 26rpx;
  font-weight: bold;
  font-size: 16px;
  display: flex;
  align-items: center
}

.search_input {
  position: absolute;
  font-size: 12px;
  right: 214rpx
}

.search_input input{
  display: block;
  box-sizing: border-box;
  background: #f7f7f7;
  border-radius: 20rpx;
  height: 60rpx;
  padding-left: 20rpx
}

.swiper_container {
  width: 750rpx;
  height: 375rpx;
}

.swiper_container swiper {
  width: 750rpx;
  height: 375rpx;
}

.swiper_container image {
  width: 750rpx;
  height: 375rpx;
}


.floor_group {
  margin-top: 30rpx
}

.index_floor .floor_group .floor_title {
  padding: 10rpx 0;
}
.index_floor .floor_group .floor_title image {
  width: 100%;
}
.index_floor .floor_group .floor_list {
  overflow: hidden;
  margin-left: 10rpx
}
.index_floor .floor_group .floor_list navigator {
  float: left;
  width: calc(100vw/3 - 13.33rpx);
  /* 后四个超链接 */
  /* 2 3 两个超链接 */
}
.index_floor .floor_group .floor_list navigator:nth-last-child(-n+4) {
  /* 原图的宽高 232 *386 */
  height: 196.31rpx;
  border-left: 10rpx solid #fff;
}

.index_floor .floor_group .floor_list navigator:nth-child(2),
.index_floor .floor_group .floor_list navigator:nth-child(3) {
  border-bottom: 10rpx solid #fff;
}
.index_floor .floor_group .floor_list navigator image {
  width: 100%;
  height: 100%;
}
