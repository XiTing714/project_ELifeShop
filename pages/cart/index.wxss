/* pages/cart/index.wxss */
page {
  background-color: #f5f5f5
}

.sticky {
  background-color: white
}

.statusbar {
  width: 100vw;
  background-color: white;
  position: relative
}

.sticky_container {
  width: 100vw;
  position: relative;
  display: flex;
  align-items: center
}

.sticky_title {
  position: absolute;
  left: 30rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  font-size: 34rpx;
}

.sticky_address {
  position: absolute;
  left: 140rpx;
  display: flex;
  align-items: center;
  color: #5c5c5c;
  height: 32rpx;
}

.sticky_address .text1 {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.sticky_address .text2 {
  flex: 3;
  font-size: 28rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}

.sticky_address .choose_btn {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 6rpx
}

.sticky_address .choose_btn image {
  width: 30rpx;
  height: 30rpx
}

.address_container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.popup_title {
  width: 100%;
  height: 64rpx;
  margin-top: 26rpx;
  display: flex;
  justify-content: center;
  align-items: flex-start;
  font-size: 34rpx;
}

.address_container .add_address {
  width: 50%;
  height: 90rpx;
  background-color: #AD0E11;
  color: white;
  font-size: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 14rpx;
  margin-bottom: 20rpx
}

.address_container .scroll {
  margin-bottom: 28rpx;
  height: calc(40vh - 64rpx - 90rpx - 26rpx - 26rpx - 20rpx)
}

.address_container .scroll scroll-view{
  margin-bottom: 28rpx;
  height: calc(40vh - 64rpx - 90rpx - 26rpx - 26rpx - 20rpx)
}

.address_container .address {
  width: 100%;
  height: 120rpx;
  border-top: 1rpx solid #f5f5f5;
  padding: 20rpx 0 20rpx 0;
  display: flex;
  font-size: 30rpx;
}

.address .address_radio {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 30rpx;
  margin-right: 18rpx
}

.address .address_info {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin-left: 20rpx
}

.address_info .user_info {
  display: flex;
  align-items: center
}

.address_info .user_info .user_telnum {
  margin-left: 28rpx
}

.address_info .spec_address {
  display: flex;
  justify-content: center;
  align-items: center
}

.btn_container {
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: calc(40vh - 64rpx - 20rpx)
}

.wx_address {
  width: 60%;
  height: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: green;
  color: white;
  font-size: 30rpx;
  border-radius: 14rpx
}

.new_address {
  width: 60%;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #AD0E11;
  color: white;
  font-size: 30rpx;
  border-radius: 14rpx;
  margin-top: 40rpx;
  margin-bottom: 20rpx
}


.goodsList {
  width: 100%;
  padding-bottom: 110rpx;
}

.a-gooods {
  width: 725rpx;
  overflow: hidden;
  position: relative;
  margin-left: 15rpx;
  background-color: white;
  border-radius: 10rpx;
  margin-top: 10rpx;
}

.a-goods-conts {
  display: flex;
  width: 950rpx;
  box-sizing: border-box;
  transition: margin-left 0.2s ease-in-out;
}

.goods-info {
  display: flex;
  padding: 30rpx 0 30rpx 0;
  width: 720rpx;
  box-sizing: border-box;
  margin-right: 10rpx
}

.radio-box {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx
}

.goods-info .img-box {
  width: 160rpx;
  height: 160rpx;
  overflow: hidden;
  margin-left: 24rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
  border-radius: 6rpx;
}

.goods-info .img-box image {
  width: 160rpx;
  height: 160rpx;
}

.goods-info .text-box {
  width: 440rpx;
  position: relative;
}

.goods-info .text-box .goods-title {
  width: 430rpx;
  font-size: 28rpx;
  color: #000;
}

.goods-price {
  height: 48rpx;
  position: absolute;
  bottom: 0;
  display: flex
}


.goods-price .minprice {
  height: 48rpx;
  font-size: 34rpx;
  color: #AD0E11;
  display: flex;
  justify-content: flex-end;
  align-items: flex-end;
}

.goods-price .oriprice {
  width: 64rpx;
  height: 48rpx;
  margin-left: 16rpx;
  font-size: 26rpx;
  color: #666666;
  text-decoration: line-through;
  display: flex;
  align-items: flex-end;
}

.goods-info .text-box .buy-num {
  height: 48rpx;
  line-height: 48rpx;
  position: absolute;
  right: 10rpx;
  bottom: 0;
  display: flex;
  /*justify-content: space-between;*/
  font-size: 24rpx;
  text-align: center;
}

.goods-info .text-box .buy-num .jian-btn {
  width: 70rpx;
  height: 100%;
  background-color: #F2F3F5;
  border-radius: 6rpx;
  line-height: 46rpx;
  font-size: 18px;
  color: #323233;
}

.goods-info .text-box .buy-num .jian-btn.disabled {
  background-color: #f5f5f9;
  border-left: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
  border-top: 1rpx solid #eee;
  border-radius: 6rpx;
  line-height: 48rpx;
  font-size: 16px;
  color: #323233;
}

.goods-info .text-box .buy-num .jia-btn {
  width: 70rpx;
  height: 100%;
  border-radius: 6rpx;
  background-color: #F2F3F5;
  line-height: 48rpx;
  font-size: 16px;
  color: #323233;
}
.goods-info .text-box .buy-num .jia-btn.disabled {
  background-color: #f5f5f9;
  border-radius: 6rpx;
  line-height: 48rpx;
  font-size: 16px;
  color: #323233;
}
.goods-info .text-box .buy-num input {
  width: 78rpx;
  height: 48rpx;
  min-height: 48rpx;
  text-align: center;
  font-size: 24rpx;
}
.goods-info .img-box .img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 16rpx;
}
.a-goods-conts .delete-btn {
  width: 150rpx;
  background: #AD0E11;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #fff;
}

.footer_tool {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  box-shadow: 0 -0.12rem 0.18rem -0.1rem rgb(178 178 178 / 20%)
}

.footer_tool .all_chk_wrap {
  flex: 2;
  display: flex;
  align-items: center;
  padding-left: 16rpx;
}

.all_chk_wrap .text {
  font-size: 28rpx;
  margin-left: 12rpx;
}

.footer_tool .total_price_wrap {
  flex: 5;
  display: flex;
  justify-content: flex-end;
  margin-right: 16rpx
}
.footer_tool .total_price_wrap .text1 {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  margin-right: 12rpx
}
.footer_tool .total_price_wrap .text2 {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 34rpx;
  font-weight: 600;
  color: #AD0E11
}
.footer_tool .order_pay_wrap {
  flex: 3;
  background-color: #AD0E11;
  color: #fff;
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}